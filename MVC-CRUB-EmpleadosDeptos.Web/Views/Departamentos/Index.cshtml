@model IEnumerable<MVC_CRUB_EmpleadosDeptos.Models.Models.TBL_DEPARTAMENTO>

@{
    ViewBag.Title = "Listado Departamentos";
}

<h2>Listado Departamentos</h2>

<p>
    @Html.ActionLink("Ingresar Nuevo Departamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.Codigo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>

<a href="/Home/Index">Retornar</a>